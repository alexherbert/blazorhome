@page "/CounterFlux"
@using Fluxor;
@using MudBlazor
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@inject IState<BlazorApp.Store.CounterState> CounterState
@inject IDispatcher Dispatcher;

<h3>CounterFlux</h3>

<p>Current count: @currentCount</p>

<MudButton @onclick="IncrementCount" Variant="Variant.Filled" StartIcon="@Icons.Custom.Uncategorized.Radioactive" Color="Color.Warning">Click me</MudButton>

@code {
    private int currentCount => CounterState.Value.Count;

    private void IncrementCount()
    {
        Dispatcher.Dispatch(new BlazorApp.Store.AddCounter());
    }
}